<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	
	<servlet>
		<servlet-name>LogInServlet</servlet-name>
		<servlet-class>ef.luolei.login.ctrl.LogInServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>ModuleShowServlet</servlet-name>
		<servlet-class>ef.luolei.moduleshow.ctrl.ModuleShowServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>SubjectShowServlet</servlet-name>
		<servlet-class>ef.luolei.subjectshow.ctrl.SubjectShowServlet</servlet-class>
	</servlet>
	
	
	<servlet-mapping>
		<servlet-name>ModuleShowServlet</servlet-name>
		<url-pattern>/moduleshowservlet</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>LogInServlet</servlet-name>
		<url-pattern>/LogInServlet</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>SubjectShowServlet</servlet-name>
		<url-pattern>/subjectshowservlet</url-pattern>
	</servlet-mapping>
	
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <resource-ref>
    <description>DB Connection</description>
    <res-ref-name>jdbc/EasyForum</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
</web-app>
