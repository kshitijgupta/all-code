<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0.2//EN" "http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">
<!--
	Add the following DOCTYPE declaration as first line of your XXX-validation.xml file:
	<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0.2//EN" "http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">
-->
<validators>
	<field name="username">
		<field-validator type="requiredstring">
			<message>用户名不能为空！</message>
		</field-validator>
	</field>


	<field name="password1">
		<field-validator type="requiredstring">
			<message >密码不能为空！</message>
		</field-validator>
		<field-validator type="stringlength">
			<param name="minLength">6</param>
			<param name="maxLength">14</param>
			<message >密码必须在6至14位之间！</message>
		</field-validator>
	</field>
	<field name="password2">
		<field-validator type="requiredstring">
			<message >确认密码不能为空！</message>
		</field-validator>
		<field-validator type="stringlength">
			<param name="minLength">6</param>
			<param name="maxLength">14</param>
			<message >确认密码必须在6至14位之间</message>
		</field-validator>
		<field-validator type="fieldexpression">
			<param name="expression">password1==password2</param>
			<message >两次密码必须一致！</message>
		</field-validator>
	</field>
	
	
	<field name="Email">
		<field-validator type="requiredstring">
			<message >电子邮箱不能为空！</message>
		</field-validator>
		<field-validator type="email">
			<message >请填写正确的电子邮箱！</message>
		</field-validator>
	</field>
</validators>
