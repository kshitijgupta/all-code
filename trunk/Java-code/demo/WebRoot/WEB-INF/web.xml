<?xml version="1.0" encoding="UTF-8"?>
<web-app >
    <filter>
		<filter-name>EncodingFilter</filter-name>
		<filter-class>
			com.chinasofti.base.ctrl.EncodingFilter
		</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>GBK</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>EncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>


  <servlet>
    <servlet-name>MeetingRoomServlet</servlet-name>
    <servlet-class>com.chinasofti.meeting.room.ctrl.MeetingRoomServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>MeetingApplyServlet</servlet-name>
    <servlet-class>com.chinasofti.meeting.apply.ctrl.MeetingApplyServlet</servlet-class>
  </servlet>


  <servlet-mapping>
    <servlet-name>MeetingRoomServlet</servlet-name>
    <url-pattern>/servlet/MeetingRoomServlet</url-pattern>
  </servlet-mapping>
   <servlet-mapping>
    <servlet-name>MeetingApplyServlet</servlet-name>
    <url-pattern>/servlet/MeetingApplyServlet</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
<resource-ref>
      <description>DB Connection</description>
      <res-ref-name>jdbc/demo</res-ref-name>
      <res-type>javax.sql.DataSource</res-type>
      <res-auth>Container</res-auth>
  </resource-ref>
</web-app>
